<!DOCTYPE html>
<html lang="en" data-theme="retro">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.title %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-6 py-10">

    <div class="flex items-center justify-between mb-6">
      <button onclick="history.back()" class="btn btn-outline">‚Üê Back</button>

      <% if (session.user) { %>
        <a href="/solutions/editProject/<%= project.id %>" class="btn btn-primary">
          Edit Project
        </a>
      <% } %>
    </div>

    <h1 class="text-4xl font-bold mb-2"><%= project.title %></h1>
    <p class="mb-4 text-sm uppercase tracking-wide">
      Sector: <span class="font-semibold"><%= project.Sector.sector_name %></span>
    </p>

    <img src="<%= project.feature_img_url %>" class="rounded-lg shadow-lg w-full mb-8" alt="<%= project.title %>">

    <p class="text-lg mb-4"><%= project.intro_short %></p>

    <p class="text-lg mb-4">
      <span class="font-bold">Impact:</span> <%= project.impact %>
    </p>

    <p class="text-lg mb-10">
      <span class="font-bold">Source:</span>
      <a href="<%= project.original_source_url %>" target="_blank" class="link link-primary">
        Learn more
      </a>
    </p>

    <div class="bg-base-200 p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-3">Random Quote</h2>
      <p id="quote" class="italic text-lg">Loading quote...</p>
    </div>

  </div>

  <script>
    fetch("https://dummyjson.com/quotes/random")
      .then(res => res.json())
      .then(data => {
        document.getElementById("quote").textContent = data.quote;
      })
      .catch(() => {
        document.getElementById("quote").textContent = "Could not load quote at this time.";
      });
  </script>
</body>
</html>
