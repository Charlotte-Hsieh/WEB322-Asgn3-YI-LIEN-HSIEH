<!DOCTYPE html>
<html>
<head>
  <title>Projects</title>
</head>
<body>
  <%- include('partials/navbar') %>
  <h1>All Projects</h1>
  
  <% if (session.user) { %>
    <a href="/solutions/addProject" style="display: inline-block; padding: 10px 20px; background: green; color: white; text-decoration: none; margin-bottom: 20px;">Add Project</a>
  <% } %>
  
  <div>
    <% projects.forEach(project => { %>
      <div style="border: 1px solid #ccc; padding: 15px; margin-bottom: 20px;">
        <h2><%= project.title %></h2>
        <p><%= project.summary_short %></p>
        <p><strong>Sector:</strong> <%= project.Sector.sector_name %></p>
        <a href="/solutions/projects/<%= project.id %>">View Details</a>
      </div>
    <% }); %>
  </div>
</body>
</html>