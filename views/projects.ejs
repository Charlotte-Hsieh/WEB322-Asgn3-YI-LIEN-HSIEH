<!DOCTYPE html>
<html>
<head>
  <title>Projects</title>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%- include('partials/navbar') %>

  <h1 class="page-title-xmas">All Projects</h1>

  <% if (session.user) { %>
    <a href="/solutions/addProject" class="btn btn-success" style="margin-bottom: 20px; display:inline-block;">
      Add Project
    </a>
  <% } %>

  <div>
    <% projects.forEach(project => { %>
      <div class="project-card-xmas">

        <h2 class="project-name-xmas"><%= project.title %></h2>

        <p><%= project.summary_short %></p>
        <p><strong>Sector:</strong> <%= project.Sector.sector_name %></p>

        <a href="/solutions/projects/<%= project.id %>" class="btn btn-primary">View Details</a>
      </div>
    <% }); %>
  </div>

</body>
</html>