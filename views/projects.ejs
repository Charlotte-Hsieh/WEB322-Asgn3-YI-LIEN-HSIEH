<!DOCTYPE html>
<html lang="en" data-theme="retro">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects - Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-10">

    <div class="flex items-center justify-between mb-6">
      <h1 class="text-4xl font-bold">Projects</h1>

      <% if (session.user) { %>
        <a href="/solutions/addProject" class="btn btn-success">Add New Project</a>
      <% } %>
    </div>

    <% if (sector) { %>
      <p class="mb-6 text-lg italic">
        Showing results for sector: <span class="font-bold"><%= sector %></span>
      </p>
    <% } %>

    <div class="hero bg-base-200 rounded-lg mb-8 py-8">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <p class="mb-4">Browse climate solution projects by sector.</p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/solutions/projects?sector=Land Sinks" class="btn btn-sm">Land Sinks</a>
            <a href="/solutions/projects?sector=Industry" class="btn btn-sm">Industry</a>
            <a href="/solutions/projects?sector=Transportation" class="btn btn-sm">Transportation</a>
            <a href="/solutions/projects?sector=Electricity" class="btn btn-sm">Electricity</a>
            <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-sm">
              Food, Agriculture, and Land Use
            </a>
            <a href="/solutions/projects" class="btn btn-sm btn-outline">View All</a>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="table table-zebra w-full bg-base-100 rounded-lg">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td class="font-semibold"><%= project.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= project.Sector.sector_name %>" class="link link-primary">
                  <%= project.Sector.sector_name %>
                </a>
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-secondary btn-sm">
                  Details
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
